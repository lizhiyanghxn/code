{
  "version": "independent",
  "npmClient": "yarn",
  "useWorkspaces": true,
  "changelog": {
    "repo": "dcp-fe/dcp-components",
    "cacheDir": ".changelog"
  },
  "ignoreChanges": [
    "**/*.md",
    "**/*.test.ts",
    "**/*.e2e.ts",
    "**/demos/**",
    "**/fixtures/**",
    "**/test/**"
  ],
  "changelogPreset": {
    "name": "conventionalcommits",
    "issueUrlFormat": "jira.sensetime.com/browse/{{id}}"
  },
  "command": {
    "version": {
      "allowBranch": ["master", "dev/release-taomin"],
      "conventionalCommits": true,
      "createRelease": "gitlab",
      "exact": true,
      "message": "ðŸŽ¨ chore(release): publish"
    },
    "publish": {
      "allowBranch": ["master", "dev/release-taomin"],
      "registry": "https://npm-registry.sensetime.com"
    }
  }
}
